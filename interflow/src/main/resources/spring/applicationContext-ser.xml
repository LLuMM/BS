<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	">

    <!-- 配置Service扫描 -->
    <context:component-scan base-package="pw.lumm.service" />
    <context:component-scan base-package="pw.lumm.utils.listeners"/>
    <bean name="newsService" class="pw.lumm.service.impl.NewsServiceImpl"></bean>
    <bean name="questionService" class="pw.lumm.service.impl.QuestionServiceImpl"></bean>
    <bean name="messageService" class="pw.lumm.service.impl.MessageServiceImpl"></bean>
    <bean name="forumService" class="pw.lumm.service.impl.ForumServiceImpl"></bean>
    <bean name="answerServer" class="pw.lumm.service.impl.AnswerServerImpl"></bean>
    <bean name="searchService" class="pw.lumm.service.impl.SearchServiceImpl"></bean>
    <bean id="server" class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg index="0" value="http://192.168.202.129:8080/solr/collection1"/>
    </bean>

    <!--调度器，每分钟刷新新闻-->
    <bean id = "schedule" class="pw.lumm.utils.thrift.NewsFresh"></bean>
    <bean id="SpringQuartzJobMethod" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="schedule"/>
        </property>
        <property name="targetMethod">
            <value>getNews</value>
        </property>
    </bean>
    <bean id="cronTriggerFactoryBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean ">
        <property name="jobDetail" ref="SpringQuartzJobMethod"></property>
        <property name="cronExpression" value="0 */5 * * * ?"></property>
    </bean>
    <bean id="SpringJobSchedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cronTriggerFactoryBean"></ref>
            </list>
        </property>

    </bean>
</beans>