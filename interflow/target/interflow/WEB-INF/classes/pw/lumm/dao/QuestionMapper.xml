<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pw.lumm.dao.QuestionMapper" >
    <select id="getForum" resultType="pw.lumm.model.Forum">
        select * from forum where type = #{0} and status = #{1}
    </select>
    <select id="getQuestionByForunmId" parameterType="String"  resultType="pw.lumm.model.Question">
        select * from question where fid = #{id}
    </select>
    <insert id="addQuestion"  parameterType="pw.lumm.model.Question" >
        insert into question (id, userid, fid, title, content, time,uname) values (#{id},#{userid}, #{fid}, #{title},#{content},#{time,jdbcType=TIMESTAMP},#{uname})
    </insert>

    <select id="getQuestionById" parameterType="String"  resultType="pw.lumm.model.Question">
        select * from question where id = #{id}
    </select>

    <select id="getAnswerByQid" parameterType="String"  resultType="pw.lumm.model.Answer">
        select * from answer where qid = #{id}
    </select>

    <update id="setHitById">
        update question set hits = #{1} where id = #{0}
    </update>
</mapper>